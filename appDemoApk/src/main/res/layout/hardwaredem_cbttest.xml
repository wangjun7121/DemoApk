<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/m0_rl" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:gravity="center_horizontal">

    <TextView android:id="@+id/m0_title" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_alignParentTop="true"
        android:textSize="22sp" android:gravity="center_horizontal"
        android:text="Bt Test" />

    <LinearLayout android:id="@+id/m0_ll"
        android:layout_marginTop="20dp" android:layout_below="@id/m0_title"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/m0_t1" android:gravity="center_horizontal"
            android:layout_width="fill_parent" android:layout_height="wrap_content" />

        <TextView android:id="@+id/m0_t2" android:gravity="center_horizontal"
            android:layout_width="fill_parent" android:layout_height="wrap_content" />

        <TextView android:id="@+id/m0_t3"
            android:layout_marginTop="20dp" android:gravity="center_horizontal"
            android:layout_width="fill_parent" android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>
